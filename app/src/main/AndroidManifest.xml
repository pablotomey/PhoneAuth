<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kona.phoneauth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_phoneauth"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_phoneauth_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CodeNumberActivity"
            android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name=".PhoneNumberActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Bienvenido a PhoneAuth">
        </activity>
    </application>

</manifest>